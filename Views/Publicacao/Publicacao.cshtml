@model IEnumerable<ComoFazerCrud.Models.Publicacao>

@{
    ViewData["Title"] = "Catálogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/js/publicacao.js"></script>
    <!-- Outros scripts específicos da página Publicacao.cshtml -->
}


<h1>Publicação</h1>

<div class="create-publicacao">
    <a asp-action="Create" class="btn btn-success">Criar Nova Publicação</a>
</div>

<div class="publicacao-list">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="publicacao-item">
                        <img src="@item.Imagem" alt="@item.Name" class="img-fluid">
                        <div class="publicacao-details">
                            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                            <p>Valor: @Html.DisplayFor(modelItem => item.Valor)</p>
                            <p>Quantidade: @Html.DisplayFor(modelItem => item.Quantidade)</p>
                        </div>
                        <div class="publicacao-actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>Nenhuma publicação disponível.</p>
    }
</div>
